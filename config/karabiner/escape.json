{
  "title": "Escape key to grave/tilde",
  "maintainers": ["me"],
  "rules": [
    {
      "description": "Esc: ` (grave)",
      "manipulators": [
        {
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "repeat": false
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 64007
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Shift + Esc: ~ (tilde)",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["shift"],
              "repeat": false
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 64007
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control + Esc: Esc",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 64007
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Grave/accent (fn + Esc): Esc",
      "manipulators": [
        {
          "from": {
            "key_code": "grave_accent_and_tilde"
          },
          "to": [
            {
              "key_code": "escape",
              "repeat": false
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 64007
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Command + Esc: âŒ˜ + ` (app window cycle)",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 64007
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
