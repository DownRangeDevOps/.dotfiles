# Follow symlinks
--follow

# Include hidden files
--hidden

# Case insensitive search unless it contains capital letter(s)
--smart-case

# Ignore Dependencies
--glob='!node_modules/**'
--glob='!vendor/**'
--glob='!__pycache__/**'
--glob='!.terraform/**'

# Ignore Build output
--glob='!dist/**'
--glob='!build/**'
--glob='!target/**'
--glob='!bin/**'
--glob='!obj/**'

# Ignore IDE
--glob='!.vscode/**'
--glob='!.idea/**'

# Ignore OS files
--glob='!.DS_Store'
--glob='!Thumbs.db'

# Ignore Temporary files
--glob='!*.tmp'
--glob='!*.log'
--glob='!*.swp'
--glob='!*~'

# Ignore Python auto-generated files and test/lint caches
--glob='!*.pyc'
--glob='!*.pyo'
--glob='!*.egg-info/**'
--glob='!.pytest_cache/**'
--glob='!.tox/**'
--glob='!.mypy_cache/**'

# Ignore Java compiled files and build system caches
--glob='!*.class'
--glob='!.gradle/**'
--glob='!.mvn/**'

# Ignore JavaScript/TypeScript compiled/minified files and linter caches
--glob='!*.min.js'
--glob='!*.bundle.js'
--glob='!.eslintcache'
--glob='!coverage/**'

# Ignore Rust build output and auto-generated files
--glob='!cargo.lock'

# Ignore Go dependency checksum files
--glob='!go.sum'
