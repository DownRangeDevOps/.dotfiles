{
  "kubernetes_deployment": {
    "prefix": ["k8s-deployment"],
    "body": [
      "apiVersion: apps/v1",
      "kind: Deployment",
      "metadata:",
      "  name: ${1:app-name}",
      "  namespace: ${2:default}",
      "  labels:",
      "    app: ${3:app-name}",
      "spec:",
      "  replicas: ${4:2}",
      "  selector:",
      "    matchLabels:",
      "      app: ${5:app-name}",
      "  template:",
      "    metadata:",
      "      labels:",
      "        app: ${6:app-name}",
      "    spec:",
      "      containers:",
      "      - name: ${7:container-name}",
      "        image: ${8:image-name}:${9:tag}",
      "        ports:",
      "        - containerPort: ${10:8080}",
      "        resources:",
      "          limits:",
      "            cpu: ${11:500m}",
      "            memory: ${12:512Mi}",
      "          requests:",
      "            cpu: ${13:100m}",
      "            memory: ${14:256Mi}",
      "        env:",
      "        - name: ${15:ENV_VAR}",
      "          value: ${16:value}",
      ""
    ],
    "description": "Kubernetes Deployment manifest"
  },
  "helm_chart": {
    "prefix": ["helm-values"],
    "body": [
      "# Default values for ${1:chart-name}.",
      "replicaCount: ${2:1}",
      "",
      "image:",
      "  repository: ${3:repository}",
      "  tag: ${4:latest}",
      "  pullPolicy: ${5:IfNotPresent}",
      "",
      "service:",
      "  type: ${6:ClusterIP}",
      "  port: ${7:80}",
      "",
      "resources:",
      "  limits:",
      "    cpu: ${8:100m}",
      "    memory: ${9:128Mi}",
      "  requests:",
      "    cpu: ${10:50m}",
      "    memory: ${11:64Mi}",
      "",
      "ingress:",
      "  enabled: ${12:false}",
      "  annotations: {}",
      "  hosts:",
      "    - host: ${13:chart-example.local}",
      "      paths:",
      "        - path: ${14:/}",
      "          pathType: ${15:Prefix}",
      ""
    ],
    "description": "Helm chart values.yaml template"
  }
}
