# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[.gitconfig]
indent_size = 1
indent_style = tab
tab_width = 4
